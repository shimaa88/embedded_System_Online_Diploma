#include<stdio.h>
void reversr(char arr[],int s);
int main()
{char arr[100];
printf("Enter a sentence");
fflsuh(stdout);
scanf("%s",&arr);
reverse(arr,strlen(arr));
printf("%s",arr);
fflush(stdout);
	}
void reversr(char arr[],int s)
{char temp;
int i=0;
for(i;i<s;i++)
{temp=arr[i];
arr[i]=arr[s-i];
arr[s-i]=temp;

}
}
