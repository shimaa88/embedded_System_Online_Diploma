#include <string.h>

#include <stdio.h>
#define SIZE 50
int main(void) {
	char text[SIZE];
	int i;
	int count=0;

	printf("Enter the string:");/*ask user to enter an string*/
	fflush(stdout);
	gets(text);
	while(text[count]!=0)
	{count++;}
	printf("Reverse string is:");
	for(i=count;i>0;i++)
	{printf("%c",text[i]);}
	return 0;
}
