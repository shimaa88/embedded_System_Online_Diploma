#include <stdio.h>

int main(void) {
	char string[50];
	char*ps=string;
	char *rv;
	int i=0,j;
	printf("Input a string : ");
	fflush(stdout);
	scanf("%s",string);
	while(*ps!=0)
	{   ps++;
		i++;
	}
	while(i>=0)
	{

		*rv=*ps;
		rv++;
		ps--;
		i--;


	}
	printf("Reverse of the string is : %s",*rv);





	return 0;
}
